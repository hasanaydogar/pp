              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"asset_id\": \"{{asset_id}}\",\n  \"type\": \"SELL\",\n  \"amount\": 3,\n  \"price\": 160.00,\n  \"date\": \"2025-01-02T00:00:00Z\",\n  \"transaction_cost\": 1.00\n}"
            },
            "url": {
